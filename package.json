{
  "name": "mcp-xpp-server",
  "version": "1.0.0",
  "description": "MCP server for browsing Dynamics 365 Finance and Operations X++ codebase",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mcp-xpp-server": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && powershell -Command \"Copy-Item 'config' 'build' -Recurse -Force\"",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "test": "vitest run",
    "test:all": "vitest run",
    "test:mcp": "vitest run tests/mcp.test.js",
    "test:d365": "vitest run tests/d365.test.js",
    "test:performance": "vitest run tests/performance.test.js",
    "test:integration": "vitest run tests/integration.test.js",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "mcp",
    "dynamics365",
    "x++",
    "finance",
    "operations"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "@types/handlebars": "^4.0.40",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "handlebars": "^4.7.8",
    "xmldom": "^0.6.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^20.0.0",
    "ajv": "^8.17.1",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "files": [
    "build"
  ]
}
